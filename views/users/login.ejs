<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link
      href="http://localhost:3000/css/login.css"
      rel="stylesheet"
      type="text/css"
    />
    <title>Sweat Sign In</title>
  </head>

  <body>
    <header></header>
    <div class="flash-messages">
      <% if(flashMessages) { %> <% if(flashMessages.success) { %>
      <div class="alert alert-success mb-0"><%= flashMessages.success %></div>
      <% }else if(flashMessages.error) { %>
      <div class="alert alert-danger mb-0"><%= flashMessages.error %></div>
      <% }else if(flashMessages.warning) { %>
      <div class="alert alert-warning mb-0"><%= flashMessages.warning %></div>
      <% } %> <% } %>
    </div>
    <form action="/users/login" method="POST">
      <div class="main-content centered">
        <div class="own-modal">
          <div class="modal-title">Log into Sweat</div>
          <!--Username or Email-->
          <div class="form-group">
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10 input-group input-group-lg">
                <input
                  type="email"
                  name="email"
                  id="email"
                  required
                  class="form-control"
                  placeholder="Username or Email"
                />
              </div>
              <div class="col-sm-1"></div>
            </div>
          </div>

          <!--Password-->
          <div class="form-group">
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10 input-group input-group-lg">
                <input
                  type="password"
                  name="password"
                  id="password"
                  required
                  class="form-control"
                  placeholder="Password"
                />
              </div>
              <div class="col-sm-1"></div>
            </div>
          </div>

          <!--Remember User-->
          <div class="row check">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="remember"
                />
                <label class="form-check-label" for="remember">
                  Remember Me
                </label>
              </div>
            </div>
            <div class="col-sm-1"></div>
          </div>

          <!--Sign in Button-->
          <div class="form-group">
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <button
                  type="submit"
                  class="btn btn-lg col-sm-12 signin-button"
                >
                  Sign in
                </button>
              </div>
              <div class="col-sm-1"></div>
            </div>
          </div>

          <!--Cancel Button-->
          <div class="form-group">
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <a href="/" class="btn btn-lg col-sm-12 cancel-button">
                  Cancel
                </a>
              </div>
              <div class="col-sm-1"></div>
            </div>
          </div>

          <!--Forgot Password-->
          <div>
            <div class="row">
              <div class="col-sm-12">
                <a href="#">Forgot Password?</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
    <script src="signin.js"></script>
  </body>
</html>
